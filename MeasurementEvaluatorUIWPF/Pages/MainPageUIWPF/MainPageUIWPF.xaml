<Page x:Class="MeasurementEvaluatorUIWPF.Pages.MainPageUIWPF.MainPageUIWPF"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MeasurementEvaluatorUIWPF.Pages.MainPageUIWPF"
      xmlns:evaluationPage="clr-namespace:MeasurementEvaluatorUIWPF.Pages.EvaluationPage"
      xmlns:messageControlUiwpf="clr-namespace:MeasurementEvaluatorUIWPF.MessageControlUIWPF"
      xmlns:converters="clr-namespace:MeasurementEvaluatorUIWPF.Pages.MainPageUIWPF.Converters"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance local:MainPageViewModel, IsDesignTimeCreatable=False}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPageUIWPF">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl ItemsSource="{Binding Parameters.TabPages}">

            <TabControl.Resources>
                <converters:TabPageNameConverter x:Key="TabPageNameConverter"/>
            </TabControl.Resources>
            
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ., Converter={StaticResource TabPageNameConverter} }"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <!--<TabItem Header="Evaluation">
                <evaluationPage:EvaluationPageUIWPF/>
            </TabItem>
            <TabItem Header="Specification-file Editor" />
            <TabItem Header="Reference-file Editor" />
            <TabItem Header="Skew Calculation" />-->
        </TabControl>

        <GroupBox Grid.Row="1" Header="Messages">
            <messageControlUiwpf:MessageControlUIWPF />
        </GroupBox>

    </Grid>
</Page>
